<div class="row justify-content-around">
  <% @recipes.each do |recipe| %>
    <div class="card all-recipe-page" style="width: 16rem;">
      <img class="card-img-top" src="<%=recipe.photo.url %>" alt="">
      <div class="card-body">
        <h5 class="card-title"><%= recipe.title.truncate(20) %></h5>
        <p class="card-text"><%= recipe.description.truncate(40) %></p>
        <a href="/recipe/<%= recipe.id %>" class="btn btn-primary">View Details</a>
      </div>
    </div>
  <% end %>
</div>