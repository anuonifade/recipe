<div class="row justify-content-center recipe-page">
  <div class="card col-12 single-recipe">
    <img class="card-img-top" src="<%=@recipe.photo.url %>" alt="">
    <div class="card-body">
      <h5 class="card-title"><%= @recipe.title%></h5>
      <hr>
      <p class="card-text"><strong>Calories</strong>: <%=@recipe.calories %>
      <p class="card-text"><%= @recipe.description %></p>
    </div>
  </div>
</div>
